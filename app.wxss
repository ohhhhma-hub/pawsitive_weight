/** app.wxss **/
page {
  /* Color Palette */
  --color-bg: #FFFBF0; /* Warm Cream */
  --color-card: #FFFFFF;
  --color-primary: #FF9F43; /* Soft Orange */
  --color-secondary: #2ED573; /* Mint Green */
  --color-accent: #FF6B81; /* Paw Pink */
  --color-text-main: #2F3542; /* Dark Coffee */
  --color-text-sub: #747D8C; /* Warm Grey */
  --color-border: #F1F2F6;

  /* Spacing */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;

  /* Radius */
  --radius-md: 24rpx;
  --radius-lg: 32rpx;
  --radius-xl: 48rpx;

  /* Global Reset & Base */
  background-color: var(--color-bg);
  color: var(--color-text-main);
  font-family: "PingFang SC", "Heiti SC", "Helvetica", "sans-serif";
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: var(--spacing-md);
  padding-top: calc(env(safe-area-inset-top) + var(--spacing-md));
}

/* Utilities */
.card {
  background: var(--color-card);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  box-shadow: 0 8rpx 24rpx rgba(116, 125, 140, 0.08); /* Soft diffuse shadow */
  margin-bottom: var(--spacing-md);
}

.btn-primary {
  background: var(--color-primary);
  color: white;
  border-radius: 999rpx;
  padding: var(--spacing-md) var(--spacing-xl);
  font-weight: bold;
  font-size: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 159, 67, 0.3);
  transition: opacity 0.2s;
}

.btn-primary:active {
  opacity: 0.85;
}

.text-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--color-text-main);
  margin-bottom: var(--spacing-sm);
}

.text-sub {
  font-size: 26rpx;
  color: var(--color-text-sub);
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

/** index.wxss **/
.header-card {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  background: #eee;
  margin-right: 24rpx;
}

.speech-bubble {
  background: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border-bottom-left-radius: 4rpx; /* Point to cat */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  margin-bottom: 8rpx;
}

.speech-bubble text {
  font-size: 24rpx;
  color: var(--color-text-sub);
}

.msg-row {
  display: flex;
  align-items: center;
}

.cat-name, .cat-weight {
  font-weight: bold;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.edit-icon {
  font-size: 28rpx;
  opacity: 0.6;
}

/* Energy Ring */
.ring-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.ring-container {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 32rpx;
}

.progress-circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* Conic gradient set inline */
}

.inner-circle {
  width: 340rpx;
  height: 340rpx;
  border-radius: 50%;
  background: var(--color-bg);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.main-num {
  font-size: 80rpx;
  font-weight: bold;
  color: var(--color-primary);
  line-height: 1;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: var(--color-text-sub);
}

.stats-row {
  font-size: 28rpx;
  color: var(--color-text-sub);
}

.divider {
  margin: 0 16rpx;
  color: #ddd;
}

/* Log List */
.log-section {
  width: 100%;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.log-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.03);
}

.log-time {
  font-size: 24rpx;
  color: #ccc;
  width: 80rpx;
}

.log-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.log-name {
  flex: 1;
  font-size: 28rpx;
}

.log-cal {
  font-weight: bold;
  color: var(--color-primary);
}

.empty-state {
  text-align: center;
  padding: 40rpx;
  color: var(--color-text-sub);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

/* Feeding Actions (Middle of Page) */
.feeding-actions {
  width: 100%;
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 32rpx 0;
  margin-bottom: 40rpx;
}

/* Bottom Tab Bar */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 10;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.tab-icon {
  font-size: 44rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 20rpx;
  color: #999;
}

.tab-item.active .tab-text {
  color: var(--color-primary);
  font-weight: bold;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-icon-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-bottom: 8rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
  transition: transform 0.1s;
}

.btn-icon-circle:active {
  transform: scale(0.9);
}

.bg-cream { background: #FFF; border: 2rpx solid #F1F1F1; }
.bg-mint { background: #E8F8F5; color: var(--color-secondary); }
.bg-orange { background: #FFF5E6; color: var(--color-primary); }

.action-btn text {
  font-size: 24rpx;
  color: var(--color-text-sub);
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0; bottom: 0; left: 0; right: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-card {
  background: white;
  width: 80%;
  padding: 40rpx;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}

.modal-actions {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.btn-cancel, .btn-confirm {
  width: 45%;
  font-size: 28rpx;
  border-radius: 99rpx;
}

.btn-cancel {
  background: #F1F2F6;
  color: #747D8C;
}

.btn-confirm {
  background: var(--color-primary);
  color: white;
}

.btn-confirm {
  background: var(--color-primary);
  color: white;
}
